<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="@dimen/font_large_24"
            android:gravity="center"
            android:id="@+id/textHeader"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView android:layout_width="match_parent"
               android:id="@+id/benderImage"
               android:contentDescription="@string/bender_image"
               android:background="@drawable/bender_dance"
               android:layout_weight="1"
               android:layout_height="0dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="@color/colorPrimaryDark"
                  android:layout_height="wrap_content">

        <EditText android:layout_width="0dp"
                  android:imeActionLabel="Done"
                  android:singleLine="true"
                  android:imeOptions="actionDone"
                  android:hint="@string/type_text"
                  android:id="@+id/et_message"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/ivSend"
                android:contentDescription="@string/send"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/ic_send_white_24dp"
                android:layout_width="@dimen/icon_size_normal_24"
                   android:layout_height="@dimen/icon_size_normal_24"/>
    </LinearLayout>

</LinearLayout>